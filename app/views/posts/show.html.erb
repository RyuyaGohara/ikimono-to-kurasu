<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card">
        <p class="text-right my-2 mr-2"><%= @post.created_at.strftime('%Y/%m/%d') %></p>
        <% if @post.get_image.attached? %>
          <%= image_tag @post.get_image, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <p><%= image_tag @post.user.get_profile_image, width: 80, height: 80 %></p>
              <p><%= @post.user.name %></p>
            </div>
            <div class="col-md-9">
              <h5 class="card-title"><%= @post.title %></h5>
              <p class="card-text"><%= @post.body %></p>

              <% if @post.favorited_by?(current_user) %>
                <span>
                  <%= link_to post_favorites_path(@post), method: :delete do %>
                    <i class="fa-solid fa-heart"></i><%= @post.favorites.count %>
                  <% end %>
                </span>
                <% else %>
                <span>
                  <%= link_to post_favorites_path(@post), method: :post do %>
                    <i class="fa-regular fa-heart"></i><%= @post.favorites.count %>
                  <% end %>
                </span>
              <% end %>

              <span class="ml-4"><i class="fa-regular fa-comment"></i><%= @post.post_comments.count %></span>

              <p class="text-right my-2 mr-2">
                <% if @post.user == current_user %>
                  <%= link_to "編集", edit_post_path(@post.id), class: "text-success" %>
                  <%= link_to "削除", post_path(@post), method: :delete, class: "text-danger", data: { confirm: "この投稿を本当に削除しますか?" } %>
                <% end %>
              </p>

            </div>
          </div>

        <!--コメントセクション-->
          <hr>
          <div class="comments card-text">
            <label>コメント</label>
            <% @post.post_comments.each do |post_comment| %>
            <div class="card">
              <div class="row">
                <div class="col-md-3">
                  <p class="mt-2 ml-2"><%= image_tag post_comment.user.get_profile_image, width: 40, height: 40 %></p>
                  <p class="ml-1"><%= post_comment.user.name %></p>
                </div>
                <div class="col-md-9 mt-2">
                  <p><%= post_comment.comment %></p>
                  <p class="text-right mr-2">
                  <% if post_comment.user == current_user %>
                    <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "text-danger" %>
                  <% end %>
                  </p>
                </div>
              </div>
            </div>
            <% end %>
          </div>
          <hr>
          <div class="new-comment card-text">
            <%= form_with model: [@post, @post_comment] do |f| %>
              <div class="form-group">
                <label>コメントする</label>
                <%= f.text_area :comment, class: "form-control", placeholder: "コメントをここに", rows: 5 %>
              </div>
              <%= f.submit "送信する", class: "btn btn-primary float-right" %>
            <% end %>
          </div>
        <!--コメントセクション-->
        </div>
      </div>

    </div>
  </div>
</div>