<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <span>
      <%= link_to post_favorites_path(post), method: :delete, remote: true do %>
        <i class="fa-solid fa-heart" style="color: red;"></i><%= post.favorites.count %>
      <% end %>
    </span>
    <% else %>
    <span>
      <%= link_to post_favorites_path(post), method: :post, remote: true do %>
        <i class="fa-regular fa-heart"></i><%= post.favorites.count %>
      <% end %>
    </span>
  <% end %>
<% end %>