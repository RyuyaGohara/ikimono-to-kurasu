<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% @posts.each do |post| %>
      <div class="card mb-3">
        <p class="text-right my-2 mr-2"><%= post.created_at.strftime('%Y/%m/%d') %></p>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <p><%= image_tag post.user.get_profile_image, width: 70, height: 70 %></p>
              <p><%= link_to post.user.name, user_path(post.user) %></p>
            </div>
            <div class="col-md-9">
              <h5 class="card-title">
                <%= link_to post.title, post_path(post) %>
                <% if post.get_image.attached? %>
                  <span class="badge ml-2">（投稿画像あり）</span>
                <% end %>
              </h5>
              <p class="card-text"><%= post.body %></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
