<div class="container">
  <div class="row justify-content-center">
<!--コンテナ-->
    <div class="col-md-8">

      <h2>プロフィール</h2>
      <div class="row">
        <div class="col-md-4">
          <%= image_tag @user.get_profile_image, width: 150, height: 150 %>
        </div>
        <div class="col-md-8">
          <div>ユーザーネーム：<%= @user.name %></div>
          <div>自己紹介：<%= @user.introduction %></div>

          <span class="mr-3">
            <%= link_to user_followings_path(@user) do %>
              <%= @user.followings.count %>フォロー
            <% end %>
          </span>

          <span>
            <%= link_to user_followers_path(@user) do %>
              <%= @user.followers.count %>フォロワー
            <% end %>
          </span>

        <span>
        <!--ユーザー情報編集リンク-->
          <% if @user == current_user %>
            <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-outline-secondary" %>
          <% end%>
        <!--ユーザー退会ボタン-->
          <% if user_signed_in? && @user == current_user %>
            <% unless @user.email == "guest@example.com" then %>
              <%= link_to "削除",user_path(current_user.id), class: "destroy-user btn btn-outline-danger", method: :delete, "data-confirm" => "本当にこのユーザーを削除しますか？" %>
            <% end %>
          <% end %>
        </span>

        </div>
      </div>


      <% if user_signed_in? %>
        <% if current_user != @user %>
          <% if current_user.following?(@user) %>
            <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-info" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
          <% end %>
        <% end %>
      <% end %>



    </div>
<!--コンテナ-->
  </div>
</div>