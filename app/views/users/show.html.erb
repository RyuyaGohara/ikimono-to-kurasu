<h1>マイページ</h1>
<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <%= image_tag @user.get_profile_image, size: "100x100" %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image %>
  <% end %>
  <p>ユーザー画像：<%= image_tag post.user.get_profile_image(100,100) %></p>
  <p>タイトル：<%= post.title %></p>
  <p>本文：<%= post.body %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>
