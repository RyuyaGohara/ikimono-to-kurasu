<!--検索結果一覧-->
<% if @range == "ユーザー" %>

<!--ユーザー検索結果-->
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-8">
        <h4>"<%= @word %>"でユーザーを検索しました</h4>
      </div>
    </div>
  </div>
  <% if @users.present? %>
    <%= render 'users/index', users: @users %>
  <% else %>
    <p style="text-align: center; font-weight: bold;">該当するユーザーは見つかりませんでした</p>
  <% end %>

<% else %>

<!--投稿検索結果-->
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-8">
        <h4>"<%= @word %>"で投稿を検索しました</h4>
      </div>
    </div>
  </div>
  <% if @posts.present? %>
    <%= render 'posts/index', posts: @posts %>
  <% else %>
    <p style="text-align: center; font-weight: bold;">該当する投稿は見つかりませんでした</p>
  <% end %>

<% end %>
